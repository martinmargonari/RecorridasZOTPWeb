<p id="notice"><%= notice %></p>

<h2 class="sub-header">Visitas</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Persona</th>
        <th>Fecha</th>
        <th>Comentario</th>
        <th>Latitud</th>
        <th>Longitud</th>
        <th>Ver / Editar</th>
        <th>Borrar</th>
      </tr>
    </thead>

    <tbody>
      <% @visits.each do |visit| %>
        <tr>
          <% if visit.person.nil? %>
            <td>Sin persona</td>
          <% else %>
            <td><%= visit.person.nombre  %></td>
          <% end %>
          <td><%= visit.fecha %></td>
          <td><%= visit.descripcion %></td>
          <td><%= visit.latitud %></td>
          <td><%= visit.longitud %></td>
          <td><%= link_to 'Ver / Editar', edit_visit_path(visit) %></td>
          <td><%= link_to 'Borrar', visit, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= button_to 'Agregar visita', new_visit_path, :class => 'button btn btn-lg btn-primary pull-right', :method => :get %>