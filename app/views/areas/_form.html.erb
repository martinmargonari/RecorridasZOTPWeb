<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(@area, remote: remote, :html => {:class => 'form-horizontal container-fluid'} ) do |f| %>

  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :nombre, class: "col-md-1 col-xs-5 control-label", for: "area_nombre" %>
    <div class="col-md-10 col-xs-5">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
