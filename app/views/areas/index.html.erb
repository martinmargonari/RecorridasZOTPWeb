<p id="notice"><%= notice %></p>

<h2 class="sub-header">Areas</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Ver / Editar</th>
        <th>Borrar</th>
      </tr>
    </thead>

    <tbody>
      <% @areas.each do |area| %>
        <tr>
          <td><%= area.nombre %></td>
          <td><%= link_to 'Ver / Editar', edit_area_path(area) %></td>
          <td><%= link_to 'Borrar', area, method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= render 'layouts/new_button', :label => 'Nueva area', :path => new_area_path %>
