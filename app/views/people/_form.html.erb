<%= form_for(@person, :html => {:class => 'form-horizontal container-fluid'} ) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id, class: "col-sm-1 control-label", for: "person_id" %>
    <div class="col-md-10">
      <%= f.text_field :id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :nombre, class: "col-md-1 control-label", for: "person_nombre" %>
    <div class="col-md-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido, class: "col-md-1 control-label", for: "person_apellido" %>
    <div class="col-md-10">
      <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :dni, class: "col-md-1 control-label", for: "person_dni" %>
    <div class="col-md-10">
      <%= f.text_field :dni, class: "form-control", type: "number" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :fecha_nacimiento, class: "col-md-1 control-label", for: "person_fecha_nacimiento" %>
    <div class="col-md-10">
      <%= f.text_field :fecha_nacimiento, class: "form-control", type: "date" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Zona", class: "col-md-1 control-label", for: "person_zone_id" %>
    <div class="col-md-10" id="zoneSelector">
      <%= f.collection_select :zone_id, Zone.all, :id, :nombre, {:include_blank => "false"}, {:class => "form-control"} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%# Zone modal %>
<%# Added Bootstrap data modal attribute %>
<%= link_to 'New Zona', '#new_zone_modal', 'data-toggle' => 'modal' %>


<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_zone_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Nueva Zona</h4>
      </div>
      <div class="modal-body">
        <%# Render the new zone form (passing modal => true to enable remote => true) %>
        <%= render 'zones/form', :@zone => Zone.new, modal: true %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
