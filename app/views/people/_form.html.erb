</div>

<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_familia_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabelFamilia" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabelFamilia">Nueva Familia</h4>
      </div>
      <div class="modal-body">
        <%# Render the new zone form (passing modal => true to enable remote => true) %>
        <%= render 'familias/form', :@familia => Familia.new, modal: true %>
