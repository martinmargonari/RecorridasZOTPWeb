<p id="notice"><%= notice %></p>

<h2 class="sub-header">Personas</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <% if !Rails.env.production? %>
          <th>Id</th>
        <% end %>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Zona</th>
        <th>Estado</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <% if !Rails.env.production? %>
            <td><%= person.id %></td>
          <% end %>
          <td><%= person.nombre %></td>
          <td><%= person.apellido %></td>
          <% if person.zone.nil? %>
            <td>Sin zona</td>
          <% else %>
            <td><%= person.zone.nombre %></td>
          <% end %>
          <% if person.state.nil? %>
            <td>Sin estado</td>
          <% else %>  
            <td><%= person.state.nombre %></td>
          <% end %>
          <td><%= link_to 'Editar', edit_person_path(person) %></td>
          <td><%= link_to 'Borrar', person, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= button_to 'Nueva persona', new_person_path, :class => 'button btn btn-lg btn-primary pull-right', :method => :get %>
