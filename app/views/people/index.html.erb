<p id="notice"><%= notice %></p>

<h2 class="sub-header">Personas</h2>

<div class="table-responsive well">

  <%= form_for_filterrific @filterrific do |f| %>
    <div class="row-fluid">

      <div class="col-md-3">
        Area
        <%= f.select(
          :with_area_id,
          @filterrific.select_options[:with_area_id],
          { include_blank: 'Todas' }
        ) %>
      </div>

      <div class="col-md-3">
        Zona
        <%= f.select(
          :with_zone_id,
          @filterrific.select_options[:with_zone_id],
          { include_blank: 'Todas' }
        ) %>
      </div>

      <div class="col-md-6">
        Nombre / Apodo
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed'
        ) %>
      </div>

<!--       <div class="col-md-3">
        <%= link_to(
          'Reset filters',
          reset_filterrific_url,
        ) %>
      </div> -->
    </div>
  <% end %>

</div>

<%# add an automated spinner to your form when the list is refreshed %>
<%= render_filterrific_spinner %>

<%= render 'people/list', people: @people %>
  
<br>

<%= render 'layouts/new_button', :label => 'Nueva persona', :path => new_person_path %>