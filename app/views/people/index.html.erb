<p id="notice"><%= notice %></p>

<h2 class="sub-header">Personas</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Zone</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.nombre %></td>
          <td><%= person.apellido %></td>
          <% if person.zone.nil? %>
            <td>Sin zona</td>
          <% else %>
            <td><%= person.zone.nombre %></td>
          <% end %>
          <% if person.state.nil? %>
            <td>Sin estado</td>
          <% else %>  
            <td><%= person.state.nombre %></td>
          <% end %>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= button_to 'Nueva persona', new_person_path, :class => 'button btn btn-lg btn-primary pull-right', :method => :get %>
