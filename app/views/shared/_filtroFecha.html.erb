<% extraCss ||= "col-md-3" %>
<% esFechaDesde ||= false %>
<% defaulValue ||= false %>

<div class="row-fluid">
  <div class="col-xs-12 <%= extraCss %> margen-vert">
    <%= f.date_field(
      esFechaDesde ? :fecha_gte : :fecha_lte,
      placeholder: esFechaDesde ? 'Desde' : 'Hasta',
      class: "form-control",
      value: defaulValue ? defaulValue : nil
    ) %>
  </div>
</div>

<script type="text/javascript">
    <% if esFechaDesde %>
        $('#filterrific_fecha_gte').datepicker({
            format: 'dd/mm/yyyy',
            language: 'es'
        });
    <% else %>
        $('#filterrific_fecha_lte').datepicker({
            format: 'dd/mm/yyyy',
            language: 'es'
        });
    <% end %>
</script>
